{
  "name": "@atscm/monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "The atscm monorepo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atSCM/atscm.git"
  },
  "author": "Lukas Hechenberger <lukas.hechenberger@bachmann.info>",
  "homepage": "https://github.com/atSCM/atscm#readme",
  "bugs": {
    "url": "https://github.com/atSCM/atscm/issues"
  },
  "scripts": {
    "format": "prettier --ignore-path .gitignore . \"!**/{CHANGELOG.md,pnpm-lock.yaml}\" \"!packages/atscm/res/**/*\" \"!packages/atscm/types/node-opcua/constants.d.ts\"",
    "lint": "eslint --ignore-path .gitignore . --ignore-pattern \"packages/atscm/res/**/*\"  --ext .js,.ts",
    "preinstall": "node ./scripts/pnpm-only.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "update-monorepo": "sucrase-node scripts/update-monorepo.ts"
  },
  "devDependencies": {
    "@ls-age/bump-version": "1.0.0-beta.6",
    "@ls-age/commitlint-config": "0.0.1",
    "@ls-age/eslint-config": "0.9.2",
    "@ls-age/update-section": "0.2.0",
    "@pnpm/find-workspace-packages": "2.3.14",
    "@pnpm/logger": "3.2.2",
    "@typescript-eslint/eslint-plugin": "2.34.0",
    "@typescript-eslint/parser": "2.34.0",
    "commitlint": "9.1.2",
    "eslint": "7.7.0",
    "eslint-config-prettier": "6.11.0",
    "husky": "4.2.5",
    "prettier": "2.1.2",
    "prettier-plugin-package": "^1.0.0",
    "sucrase": "3.15.0"
  },
  "commitlint": {
    "extends": [
      "@ls-age"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "renovate": {
    "extends": [
      "@ls-age:automergeDev"
    ]
  }
}

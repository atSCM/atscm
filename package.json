{
  "name": "@atscm/monorepo",
  "version": "0.0.0",
  "description": "The atscm monorepo",
  "private": true,
  "scripts": {
    "format": "prettier --ignore-path .gitignore \"**/*\" \"!**/{.{git,npm}ignore,CHANGELOG.md,.nojekyll}\" \"!packages/atscm/res/**/*\" \"!**/*.xml\" \"!pnpm-lock.yaml\"",
    "lint": "eslint --ignore-path .gitignore . --ignore-pattern \"packages/atscm/res/**/*\"  --ext .js,.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atSCM/atscm.git"
  },
  "author": "Lukas Hechenberger <npm@ls-age.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/atSCM/atscm/issues"
  },
  "homepage": "https://github.com/atSCM/atscm#readme",
  "devDependencies": {
    "@ls-age/bump-version": "1.0.0-beta.5",
    "@ls-age/commitlint-config": "0.0.1",
    "@ls-age/eslint-config": "0.9.2",
    "@typescript-eslint/eslint-plugin": "2.34.0",
    "@typescript-eslint/parser": "2.34.0",
    "commitlint": "9.1.2",
    "eslint": "7.7.0",
    "eslint-config-prettier": "6.11.0",
    "husky": "4.2.5",
    "prettier": "1.18.2"
  },
  "commitlint": {
    "extends": [
      "@ls-age"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "renovate": {
    "extends": [
      "@ls-age:automergeDev"
    ]
  }
}

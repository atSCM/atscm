{
  "name": "atscm",
  "version": "1.0.0-beta.24",
  "description": "Source code management utilities for atvise",
  "main": "out/index.js",
  "engines": {
    "node": ">=8.0",
    "atscm-cli": ">=0.7.0"
  },
  "scripts": {
    "compile": "babel src --out-dir out --source-maps",
    "compile:watch": "npm run compile -- --watch",
    "commitmsg": "conventional-changelog-lint -e",
    "docs": "esdoc -c esdoc.json",
    "docs:coverage": "esdoc-coverage -c esdoc.json -t 80",
    "lint": "eslint src test",
    "prepublishOnly": "npm run compile && npm run docs",
    "test": "npm run -s test:base -- \"test/**/*.spec.js\"",
    "test:base": "cross-env NODE_ENV=test mocha --recursive --require @babel/register --require ./test/prepare --timeout 10000 --exit test/src/maintenance.spec.js",
    "test:unit": "npm run -s test:base -- \"test/src/**/*.spec.js\"",
    "test:integration": "npm run -s test:base -- \"test/integration/**/*.spec.js\"",
    "test:watch": "npm test -- --watch --reporter min",
    "test:coverage": "nyc --reporter=html npm run test:unit",
    "test:docs": "blcl docs/api --exclude https://circleci.com/gh/atSCM/workflows/atscm"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atSCM/atscm.git"
  },
  "author": "Lukas Hechenberger <lukas.hechenberger@bachmann.info>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/atSCM/atscm/issues"
  },
  "homepage": "https://github.com/atSCM/atscm#readme",
  "devDependencies": {
    "@babel/cli": "^7.1.0",
    "@babel/core": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/register": "^7.0.0",
    "@ls-age/bump-version": "^0.1.3",
    "@ls-age/esdoc-coverage": "^0.1.6",
    "babel-plugin-istanbul": "^4.1.6",
    "broken-link-checker-local": "^0.1.1",
    "buffer-replace": "^1.0.0",
    "codecov": "^3.0.0",
    "coffee-script": "^1.12.7",
    "conventional-changelog-lint": "^2.1.1",
    "cross-env": "^5.1.3",
    "esdoc": "^1.0.4",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^4.17.0",
    "eslint-config-lsage": "^0.3.0",
    "eval": "^0.1.2",
    "husky": "^0.14.3",
    "istanbul-combine": "^0.3.0",
    "mocha": "^5.0.0",
    "mocha-circleci-reporter": "0.0.2",
    "nyc": "^11.4.1",
    "proxyquire": "^1.7.11",
    "sinon": "^4.2.2",
    "typescript": "^2.7.1",
    "unexpected": "^10.37.0",
    "unexpected-sinon": "^10.8.2",
    "unexpected-stream": "^2.1.0",
    "yargs": "^11.0.0"
  },
  "dependencies": {
    "@atscm/server-scripts": "^0.2.3",
    "browser-sync": "^2.23.6",
    "fs-extra": "^6.0.1",
    "gulp": "^4.0.0",
    "gulp-compile-handlebars": "^0.6.1",
    "gulplog": "^1.0.0",
    "handlebars-helpers": "^0.10.0",
    "hasha": "^3.0.0",
    "mri": "^1.1.1",
    "node-cleanup": "^2.1.2",
    "node-opcua": "0.0.60",
    "p-queue": "^3.0.0",
    "sane": "^2.3.0",
    "semver": "^5.6.0",
    "stream-to-promise": "^2.2.0",
    "through2": "^2.0.3",
    "validate-npm-package-name": "^3.0.0",
    "vinyl": "^2.0.1",
    "xml-js": "^1.6.2"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "extends": "lsage"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": 8
          }
        }
      ]
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "res/**/*.*"
    ],
    "require": [
      "@babel/register"
    ],
    "sourceMap": false,
    "instrument": false,
    "check-coverage": true
  },
  "standard-version": {
    "skip": {
      "changelog": true,
      "tag": true
    },
    "scripts": {
      "postbump": "./node_modules/.bin/conventional-changelog -r 0 -i CHANGELOG.md --same-file --preset angular"
    }
  }
}
